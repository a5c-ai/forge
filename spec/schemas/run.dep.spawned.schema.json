{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://a5cforge.dev/schemas/a5cforge-v1/run.dep.spawned.schema.json",
  "title": "a5cforge/v1 - run.dep.spawned",
  "allOf": [
    { "$ref": "./event.base.schema.json" },
    {
      "type": "object",
      "properties": {
        "kind": { "const": "run.dep.spawned" },
        "payload": {
          "type": "object",
          "additionalProperties": true,
          "required": ["run_id", "dep_run_id"],
          "properties": {
            "run_id": { "type": "string", "minLength": 1 },
            "dep_run_id": { "type": "string", "minLength": 1 },
            "parent_step_id": { "type": "integer", "minimum": 0 },
            "parent_attempt": { "type": "integer", "minimum": 0 },
            "playbook": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "path": { "type": "string" },
                "version": { "type": "string" }
              }
            }
          }
        }
      }
    }
  ]
}

