{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://a5cforge.dev/schemas/a5cforge-v1/event.base.schema.json",
  "title": "a5cforge/v1 - Base event envelope",
  "type": "object",
  "additionalProperties": true,
  "required": ["schema", "kind", "id", "time", "actor", "payload"],
  "properties": {
    "schema": {
      "type": "string",
      "const": "a5cforge/v1"
    },
    "kind": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9]*(\\.[a-z][a-z0-9]*)*$"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "time": {
      "type": "string",
      "format": "date-time"
    },
    "actor": {
      "type": "string",
      "minLength": 1
    },
    "payload": {
      "type": "object",
      "additionalProperties": true
    }
  }
}


