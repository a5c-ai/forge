{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://a5cforge.dev/schemas/a5cforge-v1/issue.event.created.schema.json",
  "title": "a5cforge/v1 - issue.event.created",
  "allOf": [
    { "$ref": "./event.base.schema.json" },
    {
      "type": "object",
      "properties": {
        "kind": { "const": "issue.event.created" },
        "payload": {
          "type": "object",
          "additionalProperties": true,
          "required": ["issueId", "title"],
          "properties": {
            "issueId": { "type": "string", "minLength": 1 },
            "title": { "type": "string", "minLength": 1 },
            "body": { "type": "string" },
            "state": { "type": "string", "enum": ["open", "closed"] }
          }
        }
      }
    }
  ]
}


