{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://a5cforge.dev/schemas/a5cforge-v1/template.playbook.schema.json",
  "title": "a5cforge/v1 - playbook template",
  "type": "object",
  "additionalProperties": true,
  "required": ["template_id", "version", "steps"],
  "properties": {
    "template_id": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/templateStep" }
    },
    "signals": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/signalConfig" }
    },
    "evidence_producers": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/evidenceProducer" }
    },
    "breakpoints": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "overrides": {
          "type": "object",
          "additionalProperties": true,
          "properties": { "allow": { "type": "boolean" } }
        }
      }
    },
    "cbp": { "type": "array", "items": { "$ref": "#/$defs/cbpRule" } }
  },
  "$defs": {
    "templateStep": {
      "type": "object",
      "additionalProperties": true,
      "required": ["step_id", "type"],
      "properties": {
        "step_id": { "type": "integer", "minimum": 0 },
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["agent", "human", "reward"] },
        "instructions": { "type": "string" },
        "breakpoint": {
          "type": "object",
          "additionalProperties": true,
          "properties": { "enabled": { "type": "boolean" } }
        },
        "hooks": false,
        "agent": {
          "type": "object",
          "additionalProperties": true,
          "properties": { "profile": { "type": "string" } }
        },
        "reward": { "$ref": "#/$defs/rewardConfig" },
        "dependencies": {
          "type": "object",
          "additionalProperties": true,
          "properties": { "allow_spawn": { "type": "boolean" }, "await": { "type": "string", "enum": ["all"] } }
        }
      }
    },
    "rewardConfig": {
      "type": "object",
      "additionalProperties": true,
      "required": ["signals", "policy", "thresholds"],
      "properties": {
        "signals": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "policy": {
          "type": "object",
          "additionalProperties": true,
          "required": ["on_fail"],
          "properties": {
            "on_fail": { "type": "string", "enum": ["auto_redo", "pause", "fail"] },
            "redo_target_step_id": { "type": "integer", "minimum": 0 }
          }
        },
        "thresholds": {
          "type": "object",
          "additionalProperties": true,
          "required": ["pass"],
          "properties": { "pass": { "type": "number", "minimum": 0, "maximum": 1 } }
        }
      }
    },
    "signalConfig": {
      "type": "object",
      "additionalProperties": true,
      "required": ["severity", "weight", "producer", "scoring"],
      "properties": {
        "severity": { "type": "string", "enum": ["HARD", "SOFT"] },
        "weight": { "type": "number", "minimum": 0 },
        "producer": { "type": "string", "minLength": 1 },
        "producer_args": { "type": "object", "additionalProperties": true },
        "scoring": { "$ref": "#/$defs/signalScoring" }
      }
    },
    "signalScoring": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": true,
          "required": ["mode"],
          "properties": { "mode": { "const": "pass_fail" } }
        },
        {
          "type": "object",
          "additionalProperties": true,
          "required": ["mode", "pass_if_lte"],
          "properties": { "mode": { "const": "diff_ratio" }, "pass_if_lte": { "type": "number", "minimum": 0 } }
        }
      ]
    },
    "evidenceProducer": {
      "type": "object",
      "additionalProperties": true,
      "required": ["kind"],
      "properties": {
        "kind": { "type": "string", "enum": ["command"] },
        "hook": false,
        "default_outputs": { "type": "array", "items": { "type": "string", "minLength": 1 } }
      }
    },
    "cbpRule": {
      "type": "object",
      "additionalProperties": true,
      "required": ["id", "scope", "step_id", "when"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "scope": { "type": "string", "enum": ["step"] },
        "step_id": { "type": "integer", "minimum": 0 },
        "when": { "type": "string", "minLength": 1 },
        "message": { "type": "string" }
      }
    }
  }
}
