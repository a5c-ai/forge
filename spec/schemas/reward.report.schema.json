{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://a5cforge.dev/schemas/a5cforge-v1/reward.report.schema.json",
  "title": "a5cforge/v1 - reward report (scorecard)",
  "type": "object",
  "additionalProperties": true,
  "required": ["reward_total"],
  "properties": {
    "reward_total": { "type": "number", "minimum": 0, "maximum": 1 },
    "pass_threshold": { "type": "number", "minimum": 0, "maximum": 1 },
    "decision": { "type": "string", "enum": ["pass", "redo", "escalate_bp"] },
    "signals": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/signalReport" }
    },
    "notes": { "type": "string" }
  },
  "$defs": {
    "signalReport": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "pass_fail": { "type": "boolean" },
        "score": { "type": "number", "minimum": 0, "maximum": 1 },
        "severity": { "type": "string", "enum": ["HARD", "SOFT"] },
        "evidence": { "type": "array", "items": { "$ref": "./evidence.object.schema.json" } },
        "summary": { "type": "string" }
      }
    }
  }
}

